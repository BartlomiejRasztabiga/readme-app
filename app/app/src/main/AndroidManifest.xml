<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.infinitefuture.readme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="pl.infinitefuture.readme.ReadMeApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pl.infinitefuture.readme.books.BooksActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.infinitefuture.readme.addeditbook.AddEditBookActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pl.infinitefuture.readme.bookdetail.BookDetailActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a4adb38dbde64a16bfc91d2182c87b663e920709" />
    </application>
</manifest>
